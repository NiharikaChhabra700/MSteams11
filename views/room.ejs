<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Microsoft Teams</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <div class="header__back">
          <em class="fas fa-angle-left"></em>
        </div>
        <h3>Microsoft teams</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="stopVideo" class="options__button">
            <em class="fa fa-video-camera"></em>
          </div>
          
          <div id="muteButton" class="options__button">
            <em class="fa fa-microphone"></em>
          </div>
          
         <form action="/" method="GET"> 
          <div id="leavemeeting" class="options__button" > 
            <button>
              Leave
              <em class="fas fa-phone-slash"></em>
            </button>
            <!-- <script>
             function myOnclick(){
                document.location.href="ended.html";
              }
            </script> -->
            </div> 
          </form> 
          <div id="showChat" class="options__button">
            <em class="fa fa-comment"></em>
          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <em class="fas fa-user-plus"></em>
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div class="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send" class="options__button">
          <i class="fa fa-plus" aria-hidden="true"></i>
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="/js/script.js"></script>

</html>
